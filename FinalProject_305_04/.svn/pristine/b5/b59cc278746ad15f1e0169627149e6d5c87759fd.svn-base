}

/* 수강신청한 강의 리스트 tag */
let makesugangListTag = function(lect, index){
	
	let stdId = ${authUser.userId}
	
	return $("<tr>").append(
		$("<td>").html(lect.estaSub)
		, $("<td>").html(lect.majorVO.majorNm)
