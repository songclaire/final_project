searchColl.on("change", function(){
	let collId = $(this).val();
	searchMajor.find("option:gt(0)").hide();
	searchMajor.find("option." + collId).show();
	searchColl.find("option:eq()").hide();
	searchMajor.find("option:eq()").hide();
	searchColl.val(collId);
});

